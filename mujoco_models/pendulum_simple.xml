<mujoco model="simple_hanging_pendulum">
    <compiler angle="radian" coordinate="local"/>
    <option timestep="0.015" gravity="0 0 -9.81"/>
    
    <visual>
        <headlight ambient=".4 .4 .4" diffuse=".8 .8 .8" specular="0.1 0.1 0.1"/>
        <map znear=".01"/>
        <quality shadowsize="2048"/>
    </visual>

    <worldbody>
        <light pos="0 0 3"/>
        
        <!-- Ground (visual only) -->
        <geom type="plane" size="3 3 0.1" rgba="0.8 0.8 0.8 1"/>

        <!-- Fixed anchor point at the top -->
        <body name="anchor" pos="0 0 2">
            <!-- Pendulum body -->
            <body name="pendulum" pos="0 0 0">
                <!-- Hinge joint at the anchor point -->
                <joint name="hinge"
                       type="hinge"
                       pos="0 0 0"
                       axis="1 0 0"
                       damping="0.01"/>

                <!-- Pendulum rod (massless) -->
                <geom type="capsule"
                      fromto="0 0 0 0 0 -0.25"
                      size="0.02"
                      rgba="0.7 0.3 0.3 1"
                      mass="0"/>

                <!-- Pendulum mass at the end -->
                <geom type="sphere"
                      pos="0 0 -0.25"
                      size="0.1"
                      rgba="0.3 0.7 0.3 1"
                      mass="1"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="torque"
               joint="hinge"
               gear="1"
               ctrlrange="-10 10"
               ctrllimited="true"/>
    </actuator>
</mujoco>