<mujoco model="inverted_pendulum">
    <option timestep="0.02" gravity="0 0 -9.81"/>

    <worldbody>
        <light pos="0 0 2"/>

        <!-- Ground (visual only) -->
        <geom type="plane" size="2 2 0.1" rgba="0.8 0.8 0.8 1"/>

        <!-- Pendulum body -->
        <body name="pole" pos="0 0 1">
            <!-- Hinge at the pivot -->
            <joint name="hinge"
                   type="hinge"
                   pos="0 0 0"
                   axis="1 0 0"
                   damping="0.01"/>

            <!-- Massless rod -->
            <geom type="capsule"
                  fromto="0 0 0 0 0 0.5"
                  size="0.02"
                  mass="0"/>

            <!-- Point mass -->
            <geom type="sphere"
                  pos="0 0 0.5"
                  size="0.05"
                  mass="1"/>
        </body>
    </worldbody>

    <actuator>
        <motor name="torque"
               joint="hinge"
               gear="1"
               ctrlrange="-10 10"
               ctrllimited="true"/>
    </actuator>
</mujoco>
